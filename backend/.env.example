# ==========================================
# KudoBit Backend Environment Configuration
# ==========================================

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Database Configuration
DATABASE_URL=./data/kudobit.db

# Blockchain Configuration
RPC_URL=http://localhost:8545
CHAIN_ID=1337

# Smart Contract Addresses (Local Development)
CREATOR_STORE_ADDRESS=0xCf7Ed3AccA5a467e9e704C703E8D87F634fB0Fc9
LOYALTY_TOKEN_ADDRESS=0xe7f1725E7734CE288F8367e1Bb143E90bb3F0512
MOCK_USDC_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3

# External Services
RESEND_API_KEY=re_your_resend_api_key_here
PINATA_JWT=your_pinata_jwt_token_here

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Event Indexer Configuration
INDEXER_START_BLOCK=0
INDEXER_POLLING_INTERVAL=5000
INDEXER_BATCH_SIZE=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/server.log

# Email Configuration
FROM_EMAIL=noreply@kudobit.com
SUPPORT_EMAIL=support@kudobit.com

# IPFS Configuration (Optional - Currently Disabled)
IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/
IPFS_API_URL=https://api.pinata.cloud/