{
  "name": "kudobit",
  "private": true,
  "version": "0.1.0",
  "description": "KudoBit - The Web3 Gumroad. Digital value, instantly rewarded. Empowering creators with ultra-low-cost sales and verifiable loyalty on Morph.",
  "type": "module",
  "scripts": {
    "dev": "bun run dev:frontend & bun run dev:backend",
    "dev:frontend": "bunx --bun vite",
    "dev:backend": "cd backend && npm run dev",
    "dev:check": "node scripts/start-local-dev.cjs",
    "hardhat:node": "npx hardhat node --hostname 0.0.0.0",
    "dev:light": "./dev-light.sh",
    "dev:safe": "NODE_OPTIONS='--max-old-space-size=2048' vite --port 5173 --no-open",
    "build": "vite build",
    "build:check": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "dev:full": "./start-dev.sh",
    "backend": "cd backend && npm start",
    "backend:dev": "cd backend && npm run dev",
    "test": "npx hardhat test",
    "test:enhanced": "node test/run-all-tests.cjs",
    "deploy:local": "npx hardhat run scripts/deploy-enhanced-contracts.cjs --network hardhat",
    "deploy:local:node": "npx hardhat run scripts/deploy-enhanced-contracts.cjs --network localhost",
    "test:watch": "npx hardhat test --watch",
    "compile": "npx hardhat compile",
    "clean": "npx hardhat clean",
    "setup:test": "node scripts/setup-test-environment.cjs",
    "setup:node": "node scripts/setup-test-environment.cjs node-only",
    "setup:deploy": "node scripts/setup-test-environment.cjs deploy-only"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@rainbow-me/rainbowkit": "^2.2.8",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-router": "^1.121.34",
    "@vitejs/plugin-react": "^4.6.0",
    "caniuse-lite": "^1.0.30001727",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.0",
    "framer-motion": "^12.23.6",
    "lucide-react": "^0.523.0",
    "postcss-import": "^16.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hot-toast": "^2.5.2",
    "siwe": "^3.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "viem": "^2.33.0",
    "wagmi": "^2.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/router-devtools": "^1.121.34",
    "@tanstack/router-plugin": "^1.121.37",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^24.0.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "hardhat": "^2.26.1",
    "mocha": "^11.7.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.0",
    "vite": "^5.4.19"
  }
}
